@model SuperPet.Models.Usuario

@{
    ViewBag.Title = "Desactivar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Desactivar</h2>

<h3>¿Seguro que quieres desactivar a este usuario?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Activo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Activo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        if (Model.Activo == false)
        {
            <div class="form-actions no-color">
                <input type="submit" value="Activar" class="btn btn-success" />
            </div>
        }
        else
        {
            <div class="form-actions no-color">
                <input type="submit" value="Desactivar" class="btn btn-success btn-block" />
            </div>
        }
    }
</div>
