
@model IEnumerable<SuperPet.Models.Categoria>
<!--INDICE DE CATEGORIA-->
@{
    ViewBag.Title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categoria</h1>



<button onclick="location.href='@Url.Action("Create")'" type="button" class="btn btn-success  btn-block">Crear Categoria</button>
<!--
<p>
    @Html.ActionLink("Crear Categoria", "Create")
