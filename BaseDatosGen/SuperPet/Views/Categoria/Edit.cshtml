@model SuperPet.Models.Categoria
<!--EDITAR CATEGORIA-->
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar categoria</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="form-group col-md-5">
            @Html.LabelFor(model => model.NombreCat, htmlAttributes: new { @class = "control-label col-md-3" })
            <div>
                @Html.EditorFor(model => model.NombreCat, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                @Html.ValidationMessageFor(model => model.NombreCat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-7">
            @Html.LabelFor(model => model.NombreSupcat, htmlAttributes: new { @class = "control-label col-md-4" })
            <div>
                @Html.EditorFor(model => model.NombreSupcat, new { htmlAttributes = new { @class = "form-control col-md-3" } })
                @Html.ValidationMessageFor(model => model.NombreSupcat, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <!--<input type="submit" value="Crear" class="btn btn-success col-md-6" />-->
        <button type="submit" value="Crear" class="btn btn-success">Aceptar</button>
        <button onclick="location.href='@Url.Action("Index")'" type="button" class="btn btn-success">Volver</button>
    </div>

</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
