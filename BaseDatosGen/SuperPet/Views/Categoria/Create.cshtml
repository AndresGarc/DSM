@model SuperPet.Models.Categoria
<!--CREATE DE CATEGORIA-->
@{
    ViewBag.Title = "Crear Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Introducir Categoria</h2>


@using (Html.BeginForm("Create", "Categoria", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-6">

            <!--FORMULARIO PARA LA NUEVA CATEGORIA-->
            @Html.LabelFor(model => model.NombreCat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreCat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreCat, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <!--<input type="submit" value="Crear" class="btn btn-success col-md-6" />-->
        <button type="submit" value="Crear" class="btn btn-success">Introducir</button>
        <button onclick="location.href='@Url.Action("Index")'" type="button" class="btn btn-success">Volver</button>
    </div>

</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}