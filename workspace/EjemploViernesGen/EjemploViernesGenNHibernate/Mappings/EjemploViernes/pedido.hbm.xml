<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="EjemploViernesGenNHibernate"
		                   namespace="EjemploViernesGenNHibernate.EN.EjemploViernes">
		    
		    
			
				<class name="PedidoEN" table="Pedido"> 
				  	
						<id name="Id" column="idPedido" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Estado" > 
						<column name="estado"  not-null="true"/>
					</property>
			
			
			
			
		  			
						<many-to-one name="Cliente" class="EjemploViernesGenNHibernate.EN.EjemploViernes.ClienteEN" >	
								<column name="FK_DNI_idCliente"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="LineaPedido" cascade="delete">
							<key>
							
								
								<column name="FK_idPedido_idPedido_0"/>
					      	</key>
							<one-to-many class="EjemploViernesGenNHibernate.EN.EjemploViernes.LineaPedidoEN"/>
					    </bag>
					
			
			
		  			
						<bag name="DirEnvio" table="[pedido_dirEnvio]"  >
							<key>
								
									<column name="FK_idPedido_idPedido"/> 
							</key>
      						<many-to-many class="EjemploViernesGenNHibernate.EN.EjemploViernes.DirEnvioEN">
									<column name="FK_idDirEnvio_idDirEnvio"/> 
      						</many-to-many>
    					</bag>
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="PedidoENReadAllHQL">from PedidoEN</query>
		</hibernate-mapping>
	