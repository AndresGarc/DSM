<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="SuperPetGenNHibernate"
		                   namespace="SuperPetGenNHibernate.EN.BaseDatos">
		    
		    
			
				<class name="LineaPedidoEN" table="LineaPedido"> 
						<id name="Numero" column="Numero"/> 
			
					
					<property name="Cantidad" type="integer"> 
						<column name="Cantidad"  not-null="true"/>
					</property>
			
			
			
			
		  			
						<many-to-one name="Producto" class="SuperPetGenNHibernate.EN.BaseDatos.ProductoEN" >	
								<column name="FK_idProducto_idProducto"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="Pedido" class="SuperPetGenNHibernate.EN.BaseDatos.PedidoEN" >	
								<column name="FK_idPedido_idPedido"/> 
						</many-to-one>
											 					
					
					
					
					
		
		 </class>	
		  
		  <query name="LineaPedidoENReadAllHQL">from LineaPedidoEN</query>
		</hibernate-mapping>
	