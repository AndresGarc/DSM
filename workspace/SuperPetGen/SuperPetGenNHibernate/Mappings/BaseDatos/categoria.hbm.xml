<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="SuperPetGenNHibernate"
		                   namespace="SuperPetGenNHibernate.EN.BaseDatos">
		    
		    
			
				<class name="CategoriaEN" table="Categoria"> 
				  	
						<id name="Id" column="idCategoria" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Nombre" type="string"> 
						<column name="Nombre"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="Descripcion"  not-null="true"/>
					</property>
			
			
			
			
			
		  			
						<bag name="Supercategoria" >
							<key>
							
								
								<column name="FK_idCategoria_idCategoria"/>
					      	</key>
							<one-to-many class="SuperPetGenNHibernate.EN.BaseDatos.CategoriaEN"/>
					    </bag>
					
			
		  			
						<many-to-one name="Subcategoria" class="SuperPetGenNHibernate.EN.BaseDatos.CategoriaEN" >	
								<column name="FK_idCategoria_idCategoria"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="Usuario" table="[usuario_categoria]" inverse="true" >
							<key>
								
									<column name="FK_idCategoria_idCategoria"/> 
							</key>
      						<many-to-many class="SuperPetGenNHibernate.EN.BaseDatos.UsuarioEN">
									<column name="FK_EmailUsuarioBasico_idUsuario"/> 
      						</many-to-many>
    					</bag>
			
		  			
						<bag name="Producto" >
							<key>
							
								
								<column name="FK_idCategoria_idCategoria"/>
					      	</key>
							<one-to-many class="SuperPetGenNHibernate.EN.BaseDatos.ProductoEN"/>
					    </bag>
					
			
		  			
						<bag name="CategoriaDescripcion" >
							<key>
							
								
								<column name="FK_idCategoria_idCategoria"/>
					      	</key>
							<one-to-many class="SuperPetGenNHibernate.EN.BaseDatos.CategoriaDescripcionEN"/>
					    </bag>
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="CategoriaENReadAllHQL">from CategoriaEN</query>
		</hibernate-mapping>
	