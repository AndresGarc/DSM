<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="SuperPetGenNHibernate"
		                   namespace="SuperPetGenNHibernate.EN.BaseDatos">
		    
		    
			
				<class name="ProductoEN" table="Producto"> 
				  	
						<id name="Id" column="idProducto" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Nombre" type="string"> 
						<column name="Nombre"  not-null="true"/>
					</property>
					<property name="URLFoto" type="string"> 
						<column name="URLFoto"  not-null="true"/>
					</property>
					<property name="Precio" type="float"> 
						<column name="Precio"  not-null="true"/>
					</property>
					<property name="Stock" type="integer"> 
						<column name="Stock"  not-null="true"/>
					</property>
					<property name="ValoracionMedia" type="float"> 
						<column name="valoracionMedia"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
		  			
						<many-to-one name="Categoria" class="SuperPetGenNHibernate.EN.BaseDatos.CategoriaEN" >	
								<column name="FK_idCategoria_idCategoria"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="Comentario" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="SuperPetGenNHibernate.EN.BaseDatos.ComentarioEN"/>
					    </bag>
					
			
		  			
						<bag name="Usuario" table="[producto_usuario]"  >
							<key>
								
									<column name="FK_idProducto_idProducto"/> 
							</key>
      						<many-to-many class="SuperPetGenNHibernate.EN.BaseDatos.UsuarioEN">
									<column name="FK_EmailUsuarioBasico_idUsuario"/> 
      						</many-to-many>
    					</bag>
			
		  			
						<bag name="Valoracion" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="SuperPetGenNHibernate.EN.BaseDatos.ValoracionEN"/>
					    </bag>
					
			
		  			
						<bag name="LineaPedido" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="SuperPetGenNHibernate.EN.BaseDatos.LineaPedidoEN"/>
					    </bag>
					
			
			
		  			
						<bag name="ProductoDescripcion" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="SuperPetGenNHibernate.EN.BaseDatos.ProductoDescripcionEN"/>
					    </bag>
					
			
		  			
						<bag name="Usuario_0" table="[producto_0_usuario_0]"  >
							<key>
								
									<column name="FK_idProducto_idFavoritos"/> 
							</key>
      						<many-to-many class="SuperPetGenNHibernate.EN.BaseDatos.UsuarioEN">
									<column name="FK_EmailUsuarioBasico_idUsuario_0"/> 
      						</many-to-many>
    					</bag>
					
					
					
					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ProductoENReadAllHQL">from ProductoEN</query>
		</hibernate-mapping>
	