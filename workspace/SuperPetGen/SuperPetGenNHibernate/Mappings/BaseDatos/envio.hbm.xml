<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="SuperPetGenNHibernate"
		                   namespace="SuperPetGenNHibernate.EN.BaseDatos">
		    
		    
			
				<class name="EnvioEN" table="Envio"> 
				  	
						<id name="Id" column="idEnvio" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="HoraSalida" type="timestamp"> 
						<column name="horaSalida"  not-null="true"/>
					</property>
					<property name="HoraLlegada" type="timestamp"> 
						<column name="horaLlegada"  not-null="true"/>
					</property>
					<property name="FechaSalida" type="date"> 
						<column name="fechaSalida"  not-null="true"/>
					</property>
					<property name="FechaLlegada" type="date"> 
						<column name="fechaLlegada"  not-null="true"/>
					</property>
					<property name="Estado" > 
						<column name="estado"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
		  			
						<many-to-one name="Pedido" class="SuperPetGenNHibernate.EN.BaseDatos.PedidoEN" >	
								<column name="FK_idPedido_idPedido"/> 
						</many-to-one>
											 					
			
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="EnvioENReadAllHQL">from EnvioEN</query>
		</hibernate-mapping>
	