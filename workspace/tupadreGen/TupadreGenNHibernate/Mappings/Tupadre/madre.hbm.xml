<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="TupadreGenNHibernate"
		                   namespace="TupadreGenNHibernate.EN.Tupadre">
		    
		    
			
				<class name="MadreEN" table="madre"> 
				  	
						<id name="Nombre" column="nombreMadre" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Edad" type="integer"> 
						<column name="edad"  not-null="true"/>
					</property>
			
			
			
			
		  			
						<many-to-one name="Marido" class="TupadreGenNHibernate.EN.Tupadre.PadreEN" >	
								<column name="FK_nombrePadre_idMarido"/> 
						</many-to-one>
											 					
					
					
					
		
		 </class>	
		  
		  <query name="MadreENReadAllHQL">from MadreEN</query>
		</hibernate-mapping>
	